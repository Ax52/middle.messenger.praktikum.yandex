<div class="{{css.window}}">
  <div class="{{css.title}}">
    <h2>{{username}}</h2>
  </div>
  <div class="{{css.feed-wrapper}}">
    <div class="{{css.feed}}">
      {{#each messages}}
        <div
          class="{{#if (isYourMessage author)}}{{../css.incomeMessage}}{{else}}{{../css.yourMessage}}{{/if}}"
          data-time="{{time}}"
        >
          <p>{{message}}</p>
        </div>
      {{/each}}
    </div>
  </div>
  <div class="{{css.message-input}}">
    <input placeholder="Enter message" name="message" />
  </div>
</div>
