<div class="{{css.wrapper}}">
  <div class="{{css.frame}}">
    <div class="{{css.header}}">
      <h1>Settings</h1>
    </div>
    <form id="form-settings">
      <div class="{{css.inputs}}">
        <div class="{{css.avatar}}">
          <button class="{{css.no-avatar}}" id="set_avatar" type="button">
            <input
              class="{{css.input-avatar}}"
              type="file"
              name="avatar"
              accept="image/*"
            />
          </button>
        </div>
        <label for="first_name">
          <input name="first_name" id="first_name" disabled="true" />
          First Name
        </label>
        <label for="second_name">
          <input name="second_name" id="second_name" disabled="true" />
          Second Name
        </label>
        <label for="user_id">
          <input name="user_id" id="user_id" disabled="true" />
          User Id
        </label>
        <label for="login">
          <input name="login" id="login" disabled="true" />
          Login
        </label>
        <label for="email">
          <input name="email" id="email" disabled="true" />
          Email
        </label>
        <label for="old_password">
          <input
            name="old_password"
            id="old-password"
            placeholder="Enter your old password to reset"
            autocomplete="off"
            type="password"
          />
          Old Password
        </label>
        <label for="new_password">
          <input
            name="new_password"
            id="new-password"
            autocomplete="off"
            type="password"
          />
          New Password
        </label>
        <label for="phone">
          <input name="phone" id="phone" disabled="true" />
          Phone
        </label>
      </div>
      <div class="{{css.flex-btns}}">
        <button id="cancel-btn" class="{{css.outlined-btn-red}}" type="button">
          Cancel
        </button>
        <button id="save-btn" class="{{css.contained-btn}}" type="submit">
          Edit
        </button>
      </div>
      <div class="{{css.logout}}">
        <button id="logout-btn" class="{{css.contained-btn-red}}" type="button">
          Logout
        </button>
      </div>
    </form>
  </div>
</div>
