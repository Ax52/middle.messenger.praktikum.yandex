<div class="{{css.sidebar}}">
  <div class="{{css.primary-bar}}">
    <div class="{{css.row-btns}}">
      <button id="new-dialog">New</button>
      <button id="settings-btn">Settings</button>
    </div>
    <form id="search-dialog">
      <input name="seach-dialog" placeholder="Search" class="{{css.search-input}}" />
    </form>
  </div>
  <ul>
    {{#each chatsArr}}
      <li class="{{../css.dialog-preview}}">
        <div class="{{../css.item-chat-bar}} item-chat-bar {{#if (isChatSelected id)}}{{../css.selected-chat}}{{/if}}" data-id="{{id}}">
          <div class="{{../css.row-btns}}">
            <h4>{{title}}</h4>
            <button id="del-chat" class="{{../css.del-chat}}" data-id="{{id}}">X</button>
            {{#if (isUnread unread_count)}}
              <div class="{{../css.unread-indicator}}"></div>
            {{/if}}
          </div>
          <p class="{{../css.preview}}">{{last_message.content}}</p>
        </div>
      </li>
    {{/each}}
  </ul>
</div>
